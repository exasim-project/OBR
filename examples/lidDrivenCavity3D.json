{
  "obr": {
    "OBR_MIN_VERSION": "0.2.1",
    "BENCHMARK_FILE_VERSION": "0.3.0"
  },
  "case": {
    "type": "OpenFOAMExternalCase",
    "solver": "icoFoam",
    "case": "lidDrivenCavity3D",
    "origin": "~/data/code/hpc/Lid_driven_cavity-3d/S",
    "git": "https://develop.openfoam.com/committees/hpc.git"
  },
  "variation": {
    "name": "init",
    "type": "InitCase",
    "variants": {"timeSteps": [100]},
    "controlDict": {
      "stationary": false,
      "timeSteps": 1
    },
    "variation": [{
      "name": "mesh",
      "type": "ReBlockMesh",
      "mapFields": true,
      "dimensions": 3,
      "variants":{"cells":[5]},
      "block": "100 100 100",
      "controlDict": {
        "stationary": false,
        "timeSteps": 2
      },
      "variation": [{
        "name": "matrix_solver",
        "type": "ChangeMatrixSolver",
        "fields": ["p"],
        "defaults": {
          "p" : {
            "minIter": 0,
            "maxIter": 3000,
            "smoother": "none",
            "relTol":  0.0,
            "tolerance":  1e-06,
            "updateSysMatrix": "no",
            "sort": "yes",
            "verbose": "no"
            }
          },
        "variants": {"solver": ["CG", "BiCGStab", "IR"],
                     "preconditioner":["NoPrecond", "BJ", "DIC", "IC", "ILU"],
                     "executor":["CUDA", "HIP", "OMP", "DPCPP", "Serial"]},
        "variation": [{
          "name": "maxBlockSize",
          "type": "ChangeMatrixSolverProperties",
          "variants": { "maxBlockSize": [1 ,2 ,4 ,8 ,16] },
          "variant_of": ["BJ", "CG"],
          "comment": "creates a subvariation of the CG BJ cases for different max block size values"
            },
                      {
          "name": "innerReductionFactor",
          "type": "ChangeMatrixSolverProperties",
          "variants": { "innerReductionFactor": [0.1 ,0.05 , 0.01 ,0.05 , 0.001]},
          "variant_of": ["IR", "CG"],
          "comment": "creates a subvariation of the CG BJ cases for different max block size values"
        }
                     ]
        }]
      }]
    }
  }

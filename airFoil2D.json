{
  "obr": {
    "OBR_MIN_VERSION": "0.2.0",
    "BENCHMARK_FILE_VERSION": "0.1.0"
  },
  "case": {
    "type": "OpenFOAMTutorialCase",
    "solver": "simpleFoam",
    "case": "airFoil2D",
    "origin": "incompressible"
  },
  "variation": {
    "name": "mesh",
    "type": "RefineMesh",
    "controlDict": {
      "stationary": true,
      "timeSteps": 10
    },
    "dimensions": 2,
    "variants": {"refinements":[0, 1]},
    "variation": {
      "name": "matrix_solver",
      "type": "ChangeMatrixSolver",
      "fields": ["p"],
      "defaults": {
        "p" : {
          "minIter": 0,
          "maxIter": 3000,
          "smoother": "none",
          "relTol":  0.01,
          "tolerance":  0.01,
          "updateSysMatrix": "yes",
          "sort": "yes"
          }
        },
      "variants": {"solver": ["CG", "BiCGStab"],
                   "preconditioner":["NoPrecond", "BJ"],
                   "executor":["CUDA", "HIP", "OMP", "Serial"]}
    }
  }
}

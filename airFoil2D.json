{
  "obr": {
    "OBR_MIN_VERSION": "0.2.0",
    "BENCHMARK_FILE_VERSION": "0.1.0"
  },
  "case": {
    "type": "OpenFOAMTutorialCase",
    "solver": "simpleFoam",
    "case": "airFoil2D",
    "origin": "incompressible",
    "controlDict": {
      "stationary": true,
      "timeSteps": 10
    }
  },
  "variations": {
    "name": "mesh"
    "type": "RefineMesh",
    "dimensions": 2,
    "variants": [0, 1],
    "variation": {
      "name": "matrix_solver",
      "type": "ChangeMatrixSolver",
      "fields": ["p"],
      "defaults": {
        "p" : {
          "minIter": 0,
          "maxIter": 3000,
          "smoother": "none",
          "relTol":  0.01,
          "updateSysMatrix": "yes",
          "sort": "yes"
          }
        },
      "variants": [{"solver": ["CG", "BiCGStab"]},
                   {"preconditioner":["none", "BJ"]}
                   {"executor":["cuda", "hip", "omp", "reference"]}
                  ],
      "variation": false
    }
  }
}
